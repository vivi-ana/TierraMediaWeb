@page "/"
@model TierraMediaWeb.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Login"; 
}
<div class="row mt-5">
    <div class="col-sm-4 offset-sm-4">

        <form method="post">
            <div class="mb-3">
                <label for="exampleUser1" class="form-label">User</label>
                <input type="text" asp-for="UserCredential.User" class="form-control">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" asp-for="UserCredential.Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>